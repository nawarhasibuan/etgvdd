{
  // Format otomatis saat save
  "editor.formatOnSave": true,

  // Formatter default khusus C++
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },

  // Jika kamu pakai file .clang-format, VSCode akan otomatis pakai
  "C_Cpp.clang_format_fallbackStyle": "LLVM",

  // Tab dan indentasi umum C++
  "editor.tabSize": 4,
  "editor.insertSpaces": true,

  // Hilangkan trailing whitespace
  "files.trimTrailingWhitespace": true,

  // Akhiri file dengan newline
  "files.insertFinalNewline": true,

  // Linting live
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.errorSquiggles": "enabled",

  // Opsional: Run clang-format on save (redundan kalau formatOnSave sudah true)
  //"C_Cpp.clang_format_formatOnSave": true,

  // Opsional: Path ke clang-format custom
  // "clang-format.executable": "C:\\Program Files\\LLVM\\bin\\clang-format.exe",

  // Opsional: Exclude folder bin dari search & linting
  "files.exclude": {
    "**/bin": true
  }
}
